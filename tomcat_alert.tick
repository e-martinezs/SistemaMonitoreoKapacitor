dbrp "influx"."autogen"

var message = 'MESSAGE'

stream
	|from()
		.measurement('tomcat_jvm_memory')
		.groupBy('host')
	|deadman(1.0, 10s)
		.id('Tomcat Alert')
		.message('{{.Level}} {{index .Tags "host"}} El proceso de Tomcat dejo de enviar datos'+message)
		.details('''
			<h1>{{.ID}}</h1>
			<b>Level: {{.Level}}</b>
			<b>Host: {{index .Tags "host"}}</b>
			<b>Duration: {{.Duration}}</b>
			<p>{{.Message}}</p>
		''')
		.email()
		.stateChangesOnly()
		
